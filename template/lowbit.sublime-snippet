// [0, 1, 2, 3, 4] -> [-1, 0, 1, 0, 2]
int lowbit(int x) { return (x == 0 ? -1 : __builtin_ctz(x)); }
int lowbit(i64 x) { return (x == 0 ? -1 : __builtin_ctzll(x)); }
